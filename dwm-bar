#!/bin/env sh

# trap finish 1 3 6 15

. "Scripts/timeDBAR"
. "Scripts/dateDBAR"
. "Scripts/batteryDBAR"
. "Scripts/cpuDBAR"
. "Scripts/brightnessDBAR"
. "Scripts/memoryDBAR"
. "Scripts/musicDBAR"


function dwmbar {
	while true
	do
		xsetroot -name "$(musicDBAR)|$(memoryDBAR)|$(brightnessDBAR)|$(cpuDBAR)|$(batteryDBAR)|$(dateDBAR)|$(timeDBAR)"

		sleep 5 &
		echo $! > dwmpid
		 wait $!

	done
}


